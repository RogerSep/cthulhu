# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                              controllers.ApplicationController.index
GET        /signIn                        controllers.ApplicationController.signIn
GET        /signOut                       controllers.ApplicationController.signOut
GET        /authenticate/:provider        controllers.SocialAuthController.authenticate(provider)
GET        /debug                         controllers.ApplicationController.debug
GET        /test                          controllers.ApplicationController.test
GET        /create/:fileName              controllers.ApplicationController.create(fileName)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                  controllers.Assets.at(path="/public", file)
GET        /webjars/*file                 controllers.WebJarAssets.at(file)
